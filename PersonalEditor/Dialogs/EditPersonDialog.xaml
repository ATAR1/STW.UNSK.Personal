<Window xmlns:PersonalEditor="clr-namespace:PersonalEditor"  x:Class="PersonalEditor.Dialogs.EditPersonDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalEditor.Dialogs"
        mc:Ignorable="d"
        Title="EditPersonDialog" >
    <Grid>
        <PersonalEditor:WorkerEditor x:Name="personEditor"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Button  Content="Сохранить" IsDefault="True" HorizontalAlignment="Right" Margin="5" Click="Button_Click"/>
            <Button  Content="Отмена" IsCancel="True" HorizontalAlignment="Right" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
